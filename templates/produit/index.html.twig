{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}


 


    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td> 
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.Stock }}</td>
                {% if produit.photo is not null %}
                <td><img style="width:100px" src="{{ asset('/uploads/' ~ produit.photo) }}" alt=""></td>
                {% endif %}
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('produit_new') }}">Create new</a>
        {% endif %}   
{% endblock %}
