{% extends 'base.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}


    <h1> mon profile </h1>
      <table class="table">
       <thead>
    <tr>
                <th>Id</th>
                <th>nom</th>
                <th>prenom</th>
               
    </tr>
    </thead>
    <tbody>
     <tr>
                <th>{{ user.id }}</th>
                <th>{{ user.nom }}</th>
                <th>{{ user.prenom }}</th>
               
    </tr>
    </tbody>
     </table>
  
    <h1>mes commandes </h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_achat</th>
                <th>Etat</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.id }}</td>
                <td>{{ panier.dateAchat ? panier.dateAchat|date('Y-m-d') : '' }}</td>
                <td>{{ panier.etat ? 'Yes' : 'No' }}</td>
              
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">retour au produit</a>
{% endblock %}
